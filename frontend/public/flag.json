{
    "openapi": "3.1.0",
    "info": {
        "title": "FHIR Flag API",
        "description": "API for managing FHIR Flag resources.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://api.zorgplatform.online/fhir/V1"
        },
        {
            "url": "https://acceptatie-api.zorgplatform.online/fhir/V1"
        }
    ],
    "paths": {
        "/fhir/Flag": {
            "post": {
                "tags": [
                    "Flag"
                ],
                "summary": "Creates a new Flag resource",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/fhir+json": {
                            "schema": {
                                "$ref": "#/components/schemas/Flag"
                            },
                            "example": {
                                "resourceType": "Flag",
                                "status": "active",
                                "category": {
                                    "coding": [
                                        {
                                            "system": "http://loinc.org",
                                            "code": "74018-3",
                                            "display": "alert"
                                        }
                                    ],
                                    "text": "warning"
                                },
                                "code": {
                                    "coding": [
                                        {
                                            "system": "http://snomed.info/sct",
                                            "code": "432415000",
                                            "display": "MRSA carrier"
                                        }
                                    ],
                                    "text": "MRSA carrier"
                                },
                                "subject": {
                                    "reference": "Patient/123",
                                    "display": "John Doe"
                                },
                                "period": {
                                    "start": "2024-11-12"
                                }
                            }
                        },
                        "application/fhir+xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Flag"
                            },
                            "example": "<Flag xmlns=\"http://hl7.org/fhir\">\n  <status value=\"active\" />\n  <category>\n    <coding>\n      <system value=\"http://loinc.org\" />\n      <code value=\"74018-3\" />\n      <display value=\"alert\" />\n    </coding>\n    <text value=\"warning\" />\n  </category>\n  <code>\n    <coding>\n      <system value=\"http://snomed.info/sct\" />\n      <code value=\"432415000\" />\n      <display value=\"MRSA carrier\" />\n    </coding>\n    <text value=\"MRSA carrier\" />\n  </code>\n  <subject>\n    <reference value=\"Patient/123\" />\n    <display value=\"John Doe\" />\n  </subject>\n  <period>\n    <start value=\"2024-11-12\" />\n  </period>\n</Flag>"
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Flag created successfully",
                        "content": {
                            "application/fhir+json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flag"
                                }
                            },
                            "application/fhir+xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flag"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            },
            "put": {
                "tags": [
                    "Flag"
                ],
                "summary": "Updates an existing Flag resource",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "ID of the Flag resource to update",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/fhir+json": {
                            "schema": {
                                "$ref": "#/components/schemas/Flag"
                            }
                        },
                        "application/fhir+xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Flag"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Flag updated successfully",
                        "content": {
                            "application/fhir+json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flag"
                                }
                            },
                            "application/fhir+xml": {
                                "schema": {
                                    "$ref": "#/components/schemas/Flag"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/BadRequest"
                    },
                    "401": {
                        "$ref": "#/components/responses/Unauthorized"
                    },
                    "404": {
                        "description": "Flag not found"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "SAML": {
                "type": "apiKey",
                "description": "Enter the token as: `SAML {base64EncodedAssertion}.",
                "name": "Authorization",
                "in": "header"
            }
        },
        "schemas": {
            "Flag": {
                "type": "object",
                "properties": {
                    "resourceType": {
                        "type": "string",
                        "example": "Flag"
                    },
                    "status": {
                        "type": "string"
                    },
                    "category": {
                        "type": "object",
                        "properties": {
                            "coding": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "system": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "string"
                                        },
                                        "display": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "text": {
                                "type": "string"
                            }
                        }
                    },
                    "code": {
                        "type": "object",
                        "properties": {
                            "coding": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "system": {
                                            "type": "string"
                                        },
                                        "code": {
                                            "type": "string"
                                        },
                                        "display": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "text": {
                                "type": "string"
                            }
                        }
                    },
                    "subject": {
                        "type": "object",
                        "properties": {
                            "reference": {
                                "type": "string"
                            },
                            "display": {
                                "type": "string"
                            }
                        }
                    },
                    "period": {
                        "type": "object",
                        "properties": {
                            "start": {
                                "type": "string",
                                "format": "date"
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "BadRequest": {
                "description": "Bad Request"
            },
            "Unauthorized": {
                "description": "Unauthorized"
            },
            "ServerError": {
                "description": "Internal Server Error"
            }
        }
    },
    "security": [
        {
            "SAML": []
        }
    ]
}